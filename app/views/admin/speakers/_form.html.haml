= form_for @speaker, :html => {:multipart => true} do |f|
  -if @speaker.errors.any?
    #error_explanation
      %h2= "#{pluralize(@speaker.errors.count, "error")} prohibited this speaker from being saved:"
      %ul
        - @speaker.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :position
    = f.text_field :position
  .field
    = f.label :about
    = f.text_area :about
  .field
    = f.label :photo
    = f.file_field :photo
  .field
    = f.label :priority
    = f.text_field :priority
  .actions
    = f.submit 'Save'
