= form_for(setup_document @document), :html => {:multipart => true} do |f|
  -if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  %h2 Tasks
    = f.fields_for :attachments do |ff|
      %div        
        = ff.file_field :attachment
        - if ff.object.persisted?
          = ff.check_box :_destroy
          = ff.label :_destroy, "Destroy"
  .actions
    = f.submit 'Save'
