= title "Page Blocks"

%h1.left Page Blocks
.clear

- if @page_blocks.count > 0
  %table.zebra
    %thead
      %tr
        %th Identifier
        %th Content
        %th Actions
    %tbody
      - for page_block in @page_blocks
        %tr{ :class => cycle(:odd, :even) }
          %td= page_block.identifier
          %td= truncate page_block.content, :length => 60
          %td
            = link_to "edit", [:edit, :admin, page_block], :class => 'edit_button'
- else
  %p
    Empty.