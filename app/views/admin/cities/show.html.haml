%p#notice= notice
%p  
  = image_tag @city.photo.url(:medium)
%p
  %b Name:
  = @city.name
%p
  %b Country:
  = @city.country
%p
  %b in US?:
  = @city.in_us == true ? "yes" : "no"
%p
  %b Agenda:
  = simple_format(@city.agenda)

%p
  %b Price:
  = simple_format(@city.price)

%p
  %b Speakers:
  - @city.speakers.each do |speaker|
    %div
      = speaker.name

%p
  %b Sponsors:
  - @city.sponsors.each do |sponsor|
    %div
      = sponsor.name

= link_to 'Edit', edit_admin_city_path(@city)
\|
= link_to 'Back', admin_cities_path
